#!/usr/bin/env sh

# bar settings
yabai -m config status_bar                   on
yabai -m config status_bar_text_font         "圆体-简:Regular:15.0"
yabai -m config status_bar_icon_font         "FontAwesome:Regular:14.0"
yabai -m config status_bar_background_color  0xff202020
yabai -m config status_bar_foreground_color  0xffa8a8a8
yabai -m config status_bar_space_icon_strip      青龙 白虎 朱雀 玄武
yabai -m config status_bar_power_icon_strip   
yabai -m config status_bar_space_icon        
yabai -m config status_bar_clock_icon        

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                on
yabai -m config window_border                on
yabai -m config window_border_width          5
yabai -m config active_window_border_color   0xFF12D400
yabai -m config normal_window_border_color   0xff505050
yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.70
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  10
yabai -m config bottom_padding               10
yabai -m config left_padding                 10
yabai -m config right_padding                10
yabai -m config window_gap                   10

yabai -m rule --add app="^System Preferences$" manage=off

yabai -m rule --add app="^Enter the Gungeon$" manage=off
yabai -m rule --add app="^Tweetbot$" manage=off
yabai -m rule --add app="^Xcode$"           manage=off
yabai -m rule --add app="^Photoshop CC$"    manage=off
yabai -m rule --add app="^Fantastical 2$"   manage=off
yabai -m rule --add app="^Fantastical$"     manage=off
yabai -m rule --add app="^App Store$"       manage=off
yabai -m rule --add app="^The Unarchiver$"  manage=off
yabai -m rule --add app="^CleanMyMac 3$"    manage=off
yabai -m rule --add app="^Spotify$"         manage=off
yabai -m rule --add app="^Airmail$"         manage=off
yabai -m rule --add app="^LeagueClientUx$"  manage=off
yabai -m rule --add app="^Xee.*$"           manage=off
yabai -m rule --add app="^Finder$" title="Trash"   manage=off
yabai -m rule --add app="^Finder$" title="Copy"    manage=off
yabai -m rule --add app="^Finder$" title="Desktop" manage=off
yabai -m rule --add app="^Firefox$" title="^ImageHost" manage=off
yabai -m rule --add app="^JDownloader2$" manage=off
yabai -m rule --add app="^RimWorld.*$" manage=off
yabai -m rule --add app="^$" title="FTL" manage=off
yabai -m rule --add app="^Hollow Knight.*$" manage=off

echo "yabai configuration loaded.."
