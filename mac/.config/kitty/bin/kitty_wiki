#!/bin/bash

wiki_dir=$HOME/wiki

cmd="nvim -R"

result=$( \
  gawk 'FNR < 3 && /^title:\s+/ {$1=""; idx=split(FILENAME, parts, "/"); print parts[idx]":",$0; nextfile}' $wiki_dir/*.md | \
  fzf-tmux -p --prompt 'WIKI > ' -q "$*" | \
  cut -d: -f1
)

if [ -n "$result" ]; then
  $cmd $wiki_dir/$result
fi
