#!/bin/bash
#

ARGS=()
while [[ "$#" -gt 0 ]]; do case $1 in
    --tab)    tab_index=$2 ; shift 2 ;;
    --to)     to="--to $2" ; shift 2 ;;
    --title)  title="$2"   ; shift 2 ;;
    *)        ARGS+=("$1") ; shift ;;
esac; done

set -- "${ARGS[@]}"

current_title=$(kitty @ ls ${to} -t recent:0 |jq -r '.[0].tabs[0].title')

echo $current_title
echo $title

if [[ $current_title = "$title" ]]; then
  kitten @ focus-tab ${to} -m recent:1
elif (kitten @ ls ${to} -m title:${title} &>/dev/null); then
  kitten @ focus-window ${to} -m title:${title}
elif [[ -n $tab_index ]]; then
  kitten @ launch ${to} -m index:$tab_index --title=${title} "${ARGS[@]}"
  kitten @ focus-window ${to} -m title:${title}
else
  kitten @ launch ${to} --type=tab --title=${title} "${ARGS[@]}"
fi
