snippet defver "defp version()" b
defp version() do
  String.trim( File.read!("VERSION") ) <> "+" <> git_sha()
end

defp git_sha() do
  {result, _exit_code} = System.cmd("git", ["rev-parse", "HEAD"])
  String.slice(result, 0, 5)
end$0
endsnippet

